@page "/products"
@using ShopOnline.Models.DataTransferObjects;

@if(Products.Count() == 0)
{
    <DisplaySpinner/>

    <h3>@loadingMessage</h3>
}
else
{
    <h3 class="mb-5">Products</h3>

    var groupedProductsByCategory = GetGroupedProductsByCategory();

    @foreach(var productGroup in groupedProductsByCategory)
    {
        <h4>@GetCategoryName(productGroup)</h4>

        <div class="row mt-3">
            <DisplayProducts Products="@productGroup" />
        </div>

        <hr class="mb-3" />
    }
}
